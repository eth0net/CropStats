<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Add /comps/li/compClass if there are no comps yet. -->
  <!-- Add /li/compClass to /comps if exists (i.e. other mod already added the comps field first) -->
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ThingDef[@Name="PlantBase"]/comps</xpath>
    <nomatch Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[@Name="PlantBase"]</xpath>
      <value>
        <comps>
          <li>
            <compClass>CropStats.CropStatsComp</compClass>
          </li>
        </comps>
      </value>
    </nomatch>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[@Name="PlantBase"]/comps</xpath>
      <value>
        <li>
          <compClass>CropStats.CropStatsComp</compClass>
        </li>
      </value>
    </match>
  </Operation>
</Patch>